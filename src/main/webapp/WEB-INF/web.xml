<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD
  Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>
 
<web-app>
 
  <servlet>
    <servlet-name>SetNameServlet</servlet-name>
    <servlet-class>ru.logrocon.lesson5.SetNameServlet</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>SetNameServlet</servlet-name>
    <url-pattern>/SetNameServlet</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>AuthServlet</servlet-name>
      <servlet-class>ru.logrocon.lesson5.AuthServlet</servlet-class>
  </servlet>

  <servlet-mapping>
      <servlet-name>AuthServlet</servlet-name>
      <url-pattern>/AuthServlet</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ru.logrocon.lesson5.AuthFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <servlet-name>SetNameServlet</servlet-name>
  </filter-mapping>

  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/privatePage.jsp</url-pattern>
  </filter-mapping>

    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>ru.logrocon.lesson5.LogFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>ru.logrocon.lesson5.DatabaseListener</listener-class>
    </listener>
    <listener>
        <listener-class>ru.logrocon.lesson5.LogListener</listener-class>
    </listener>
    <context-param>
        <param-name>urlDb</param-name>
        <param-value>jdbc:postgresql://52.166.138.17:5432/</param-value>
    </context-param>
    <context-param>
        <param-name>database</param-name>
        <param-value>IM</param-value>
    </context-param>
    <context-param>
        <param-name>logPath</param-name>
        <param-value>D:\logJava.log</param-value>
    </context-param>
    <context-param>
        <param-name>userDb</param-name>
        <param-value>postgres</param-value>
    </context-param>
    <context-param>
        <param-name>passwordDb</param-name>
        <param-value>rcut12345</param-value>
    </context-param>

</web-app>